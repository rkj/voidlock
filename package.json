{
  "name": "voidlock",
  "private": true,
  "version": "0.137.10",
  "description": "Tactical squad combat game.",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "lint": "tsc --noEmit",
    "preview": "vite preview",
    "balance-sim": "tsx src/harness/BalanceSimulator.ts",
    "process-assets": "tsx scripts/process_assets.ts",
    "timeline:manifest": "node --experimental-strip-types scripts/timeline/timeline_manifest.ts",
    "timeline:analyze": "node --experimental-strip-types scripts/timeline/analyze_timeline_navigation.ts",
    "timeline:capture": "node --experimental-strip-types scripts/timeline/capture_timeline.ts",
    "timeline:analyze-frames": "node --experimental-strip-types scripts/timeline/analyze_timeline_frames.ts",
    "timeline:render": "node --experimental-strip-types scripts/timeline/render_timeline.ts",
    "timeline:era-manifest": "node --experimental-strip-types scripts/timeline/era_manifest.ts",
    "timeline:all": "npm run timeline:manifest && npm run timeline:analyze && npm run timeline:topology && npm run timeline:playbooks && npm run timeline:capture && npm run timeline:analyze-frames && npm run timeline:render",
    "timeline:topology": "node --experimental-strip-types scripts/timeline/analyze_screen_topology_changes.ts",
    "timeline:playbooks": "node --experimental-strip-types scripts/timeline/plan_navigation_playbooks.ts",
    "timeline:compile-playbooks": "node --experimental-strip-types scripts/timeline/compile_commit_playbooks.ts",
    "timeline:run": "./scripts/timeline/run.sh"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/sharp": "^0.32.0",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.1",
    "puppeteer": "^24.1.1",
    "sharp": "^0.33.5",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@google/gemini-cli": "github:google-gemini/gemini-cli",
    "firebase": "^12.8.0",
    "zod": "^4.3.6"
  }
}
